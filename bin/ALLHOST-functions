
function gethosts
{
	if [ -z "$HOSTS" ]; then
		local cwd="$(pwd)"
		local dir="$(dirname "$0")"
		local list=(
			"$cwd/ALLHOST.conf"
			"$cwd/ALLHOST.conf.dist"
			"$dir/ALLHOST.conf"
			"$dir/ALLHOST.conf.dist"
		)

		local HOSTS=

		for fn in "${list[@]}"; do
			if [ -f "$fn" ]; then
				source "$fn"
				break
			fi
		done
	fi

	for H in $HOSTS; do
		echo $H
	done
}

function fullpath
{
	local fn="$1"

	if [ -d "$fn" ]; then
		echo "$(cd "$fn"; pwd)"
	elif [ -f "$fn" ]; then
		echo "$(fullpath "$(dirname "$fn")")/$(basename "$fn")"
	else
		echo "no such file or dir: $fn" 1>&2
		return 1
	fi
}

function headline
{
	tput setab 1
	printf "%-$(tput cols)s\n" "# $*"
	tput sgr0
}
